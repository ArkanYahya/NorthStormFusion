@model NorthStorm.Models.Assistants.Level

@{
    string pageTitle = "الهيكل التنظيمي";
    ViewData["Title"] = pageTitle + " / " + "حذف قيد";
}

<h3>@ViewData["Title"]</h3>
<hr />

<p>
    <div class="text-danger h4">
        <h4 class="text-danger">هل أنت متأكد من حذف القيد؟</h4>
    </div>
</p>


<div class="card bg-light mb-3">
    <div class="card-header">بيانات القيد</div>
    <div class="card-body">
        <div class="row col-md-12">
            <div class="row col-md-12">
                <div class="form-group col-2 ">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ParentLevelId)</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.ParentLevel.Name)" readonly />
                </div>
                <div class="form-group col-2 ">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Name)</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Name)" readonly />
                </div>
                <div class="form-group col-2 ">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ClassificationId)</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Classification.Name)" readonly />
                </div>
                <div class="form-group col-2 ">
                    <label class="control-label">@Html.DisplayNameFor(model => model.LocationId)</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Location.Name)" readonly />
                </div>
                <div class="form-group col-2 ">
                </div>
                <div class="form-group col-4">
                </div>
            </div>

        </div>

    </div>
    <div class="card-footer">
        <br />
    </div>
</div>
<div class="row col-md-12">
    <div class="form-group col-md-2">
        <a asp-action="Index">إلغاء</a>
    </div>
    <div class="form-group col-md-8">
    </div>
    <form asp-action="Delete" class="form-group col-md-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger w-100" />
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}