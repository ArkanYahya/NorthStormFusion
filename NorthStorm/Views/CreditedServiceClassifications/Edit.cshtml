@model NorthStorm.Models.Classifications.CreditedServiceClassification

@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    string pageTitle = "تصنيف الخدمات المضمونة المضافة";
    ViewData["Title"] = pageTitle + " / " + "تعديل قيد";
}

<h3>@ViewData["Title"]</h3>
<hr />

<p>
    <span class="text-danger h4">
    </span>
</p>

<form asp-action="Edit">
    <div class="card bg-light mb-3">
        <div class="card-header">بيانات القيد</div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row col-md-12">
                <div class="form-group col-md-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2 align-items-center">
                    <label asp-for="IsCountedForPromotion" class="control-label"></label>
                    <input asp-for="IsCountedForPromotion" type="checkbox" class="align-middle" />
                    <span asp-validation-for="IsCountedForPromotion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="IsCountedForBouns" class="control-label"></label>
                    <input asp-for="IsCountedForBouns" type="checkbox" class="align-middle" />
                    <span asp-validation-for="IsCountedForBouns" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="IsCountedForRetirement" class="control-label"></label>
                    <input asp-for="IsCountedForRetirement" type="checkbox" class="align-middle" />
                    <span asp-validation-for="IsCountedForRetirement" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <br />

        </div>
    </div>

    <div class="row col-md-12">
        <div class="form-group col-md-2">
            <a asp-action="Index">إلغاء</a>
        </div>
        <div class="form-group col-md-8">
        </div>
        <div class="form-group col-md-2">
            <input type="submit" value="حفظ" class="btn btn-primary w-100" />
        </div>
    </div>
</form>


@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}