@model NorthStorm.Models.Comptence

@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    string pageTitle = "التخصصات العلمية";
    ViewData["Title"] = pageTitle + " / " + "إنشاء قيد";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form asp-action="Create">

    <div class="card bg-light mb-3">
        <div class="card-header">بيانات القيد</div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row col-md-12">


                <div class="form-group col-md-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="ParentComptenceId" class="control-label"></label>
                    <select asp-for="ParentComptenceId" class="form-control" asp-items="ViewBag.ParentComptences">
                        <option value="">إختر القيد الأعلى</option>
                    </select>
                    <span asp-validation-for="ParentComptenceId" class="text-danger"></span>
                </div>
                
                <div class="form-group col-md-2">
                    <label asp-for="ClassificationId" class="control-label"></label>
                    <select asp-for="ClassificationId" class="form-control" asp-items="ViewBag.Classifications">
                        <option value="">-- إختر التصنيف --</option>
                    </select>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="ComptenceSPSS" class="control-label"></label>
                    <input asp-for="ComptenceSPSS" class="form-control" />
                    <span asp-validation-for="ComptenceSPSS" class="text-danger"></span>
                </div>


                <div class="form-group col-md-4">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <br />

        </div>
    </div>

    <div class="row col-md-12">
        <div class="form-group col-md-2">
            <a asp-action="Index">إلغاء</a>
        </div>
        <div class="form-group col-md-8">
        </div>
        <div class="form-group col-md-2">
            <input type="submit" value="حفظ" class="btn btn-primary w-100" />
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}