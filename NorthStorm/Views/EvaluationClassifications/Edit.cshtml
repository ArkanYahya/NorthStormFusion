@model NorthStorm.Models.Classifications.EvaluationClassification

@{
    string pageTitle = "تصنيف التقييم السنوي";
    ViewData["Title"] = pageTitle + " / " + "تعديل قيد";
}

<h3>@ViewData["Title"]</h3>
<hr />

<p>
    <span class="text-danger h4">
    </span>
</p>

<form asp-action="Edit">
    <div class="card bg-light mb-3">
        <div class="card-header">بيانات القيد</div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row col-md-12">
                <div class="form-group col-md-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="LowEvaluationLimit" class="control-label"></label>
                    <input asp-for="LowEvaluationLimit" class="form-control" />
                    <span asp-validation-for="LowEvaluationLimit" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="UpperEvaluationLimit" class="control-label"></label>
                    <input asp-for="UpperEvaluationLimit" class="form-control" />
                    <span asp-validation-for="UpperEvaluationLimit" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="PromotionEffect" class="control-label"></label>
                    <input asp-for="PromotionEffect" type="checkbox" class="align-middle" />
                    <span asp-validation-for="PromotionEffect" class="text-danger"></span>
                </div>
              
                <div class="form-group col-md-2">
                    <label asp-for="MotivationEffect" class="control-label"></label>
                    <input asp-for="MotivationEffect" type="checkbox" class="align-middle" />
                    <span asp-validation-for="MotivationEffect" class="text-danger"></span>
                </div>

                <div class="form-group col-md-2">
                    <label asp-for="BonusEffect" class="control-label"></label>
                    <input asp-for="BonusEffect" type="checkbox" class="align-middle" />
                    <span asp-validation-for="BonusEffect" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <br />

        </div>
    </div>

    <div class="row col-md-12">
        <div class="form-group col-md-2">
            <a asp-action="Index">إلغاء</a>
        </div>
        <div class="form-group col-md-8">
        </div>
        <div class="form-group col-md-2">
            <input type="submit" value="حفظ" class="btn btn-primary w-100" />
        </div>
    </div>
</form>


@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}