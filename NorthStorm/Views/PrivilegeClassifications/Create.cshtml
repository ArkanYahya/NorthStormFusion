@model NorthStorm.Models.Classifications.PrivilegeClassification

@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    ViewData["Title"] = "إنشاء قيد";
}

<h3>@ViewData["Title"]</h3>
<hr />


<div class="card bg-light mb-3">
    <div class="card-header">بيانات القيد</div>
    <form asp-action="Create" class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <div class="row col-md-12">
                  
            <div class="form-group col-md-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="ExtendingRetirementAge" class="control-label"></label>
                <input asp-for="ExtendingRetirementAge" class="form-control" />
                <span asp-validation-for="ExtendingRetirementAge" class="text-danger"></span>
            </div>

            <div class="form-group col-md-2">
                <label asp-for="PromotionBenefites" class="control-label"></label>
                <input asp-for="PromotionBenefites" type="checkbox" class="align-middle" />
                <span asp-validation-for="PromotionBenefites" class="text-danger"></span>
            </div>

            <div class="form-group col-md-2">
                <label asp-for="OtherBenefites" class="control-label"></label>
                <input asp-for="OtherBenefites" type="checkbox" class="align-middle" />
                <span asp-validation-for="OtherBenefites" class="text-danger"></span>
            </div>


          
            <div class="form-group col-md-2 align-self-end text-md-center">
                <input type="submit" value="حفظ" class="btn btn-primary w-75" />
            </div>
        </div>
    </form>
    <div class="card-footer">
        <br />

    </div>
</div>

<div>
    <a asp-action="Index">إلغاء</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}